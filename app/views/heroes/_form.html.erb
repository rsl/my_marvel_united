<%= form_for hero, html: { class: 'mt-6' } do |form| %>
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :name, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :name, class: 'input', placeholder: 'The official name on the back of hero card itself', required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :box_id, 'Box', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <div class="select">
            <%= form.select :box_id, options_from_collection_for_select(Box.all, :id, :name), { prompt: 'Select a box'}, required: true %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :card, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <% if hero.card.persisted? %>
            <%= hero_image_tag(hero) %>
          <% end %>

          <div class="file">
            <label class="file-label">
              <%= form.file_field :card, class: 'file-input' %>
              <span class="file-cta">
                <span class="file-label">
                  Choose <%= hero.card.present? ? 'a different' : 'an' %> image
                </span>
              </span>
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :real_name, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :real_name, class: 'input', placeholder: 'The canonical real name of the hero, if known' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :gender_identity, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :gender_identity, class: 'input', placeholder: 'The canonical gender identity of the hero' %>
        </div>
      </div>
    </div>
  </div>



  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :sexual_orientation, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :sexual_orientation, class: 'input', placeholder: 'The canonical sexual orientation of the hero, if known' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <!-- Used for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.submit 'Save', class: 'button is-primary' %>
          <%= link_to 'Cancel', heroes_path, class: 'button is-white ml-1' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
