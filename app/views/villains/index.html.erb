<div class="is-flex is-fullwidth is-align-items-flex-start is-justify-content-space-between mb-5">
  <h2>Villains</h2>
  <%= link_to 'Add a Villain', new_villain_path, class: 'button is-primary' %>
</div>

<table class="table is-fullwidth is-striped is-hoverable is-narrow">
  <thead>
    <tr>
      <th class="has-text-left">Villain Name</th>
      <th class="has-text-left">Real Name</th>
      <th class="has-text-left is-hidden-mobile">Gender Identity</th>
      <th class="has-text-left is-hidden-mobile">Sexual Orientation</th>
      <th class="has-text-left">Box</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @villains.each do |villain| %>
      <tr>
        <td><%= link_to villain.name, villain_path(villain) %></td>
        <td><%= villain.real_name %></td>
        <td class="is-hidden-mobile"><%= villain.gender_identity %></td>
        <td class="is-hidden-mobile"><%= villain.sexual_orientation %></td>
        <td><%= villain.box.name %></td>
        <td class="actions has-text-right">
          <%= link_to fa_icon_tag('pen-to-square', 'duotone', title: 'Edit'), edit_villain_path(villain) %>
          <%= link_to fa_icon_tag('trash', 'duotone', title: 'Delete'), villain_path(villain), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure you want to delete this villain?' } %>
        </td>
      </tr>
    <% end %>
    <% if @villains.empty? %>
      <tr>
        <td colspan="666" class="has-text-centered p-6">No villains in database</td>
      </tr>
    <% end %>
  </tbody>
</table>
