<div class="is-flex is-align-items-center is-justify-content-center mt-6">
  <div class="box login">
    <h2>Please Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "input is-medium" %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox ml-1" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log In", class: 'button is-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
