<div class="is-flex is-fullwidth is-align-items-flex-start is-justify-content-space-between mb-5">
  <h2>Location</h2>
  <%= link_to 'Add a Location', new_location_path, class: 'button is-primary' %>
</div>

<table class="table is-fullwidth is-striped is-hoverable">
  <thead>
    <tr>
      <th class="has-text-left">Name</th>
      <th class="has-text-left">Description</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.description %></td>
        <td class="actions has-text-right">
          <%= link_to fa_icon_tag('pen-to-square', 'duotone', title: 'Edit'), [:edit, location] %>
          <%= link_to fa_icon_tag('trash', 'duotone', title: 'Delete'), location, data: { turbo_method: 'delete', turbo_confirm: 'Are you sure you want to delete this box?' } %>
        </td>
      </tr>
    <% end %>
    <% if @locations.empty? %>
      <tr>
        <td colspan="666" class="has-text-centered p-6">No locations in database</td>
      </tr>
    <% end %>
  </tbody>
</table>
