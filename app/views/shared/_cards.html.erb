<% if characters.present? %>
  <div class="is-flex is-flex-wrap-wrap cards">
    <% characters.each do |character| %>
      <div class="character">
        <%= link_to card_image_tag(character), character %>
        <%= link_to character.name, character %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="has-text-centered">
    No <%= controller_name %>
    <% if params[:query].present? %>
      match the search. Please try again.
    <% else %>
      in database
    <% end %>
  </p>
<% end %>
