<div class="level">
  <div class="level-left">
    <h2>Boxes</h2>
  </div>

  <div class="level-right">
    <%= link_to 'Add a Box', new_box_path, class: 'button is-primary' %>
  </div>
</div>

<table class="table is-fullwidth is-striped is-hoverable">
  <thead>
    <tr>
      <th class="has-text-left">Name</th>
      <th class="has-text-left">Contents</th>
      <th class="has-text-left">Description</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= link_to box.name, box_path(box) %></td>
        <td><%= render 'contents', box: box %></td>
        <td><%= box.description %></td>
        <td class="actions has-text-right">
          <%= link_to 'Edit', edit_box_path(box) %>
          <%= link_to 'Delete', box_path(box), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure you want to delete this box?' } %>
        </td>
      </tr>
    <% end %>
    <% if @boxes.empty? %>
      <tr>
        <td colspan="666" class="has-text-centered p-6">No boxes in database</td>
      </tr>
    <% end %>
  </tbody>
</table>
